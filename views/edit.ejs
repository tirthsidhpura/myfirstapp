    <th>photo</th>
    <th>upload date</th>
    <th>Action</th>
    <th>Action</th>

  </tr>
  <% for(let i = 0 ; i< items.length ; i++)  { %>
    <tr>
      <td><%= items[i].title %></td>
      <td><img height="50px" width="50px" src="/uploads/<%= items[i].image %>" alt="blogimage"></td>
